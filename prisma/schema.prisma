model Game {
  id            String     @id @default(cuid())
  status        GameStatus @default(waiting)
  turn          GameTurns  @default(white)
  players       User[]
  winner        User?      @relation("WinnerRelation", fields: [winnerId], references: [id])
  winnerId      String?    @unique
  creator       User       @relation("CreatorRelation", fields: [creatorId], references: [id])
  creatorId     String
  whitePlayer   User?      @relation("WhitePlayer", fields: [whitePlayerId], references: [id])
  whitePlayerId String?
  blackPlayer   User?      @relation("BlackPlayer", fields: [blackPlayerId], references: [id])
  blackPlayerId String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}
